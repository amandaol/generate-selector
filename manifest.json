{
  "manifest_version": 2,

  "name": "Selectify",
  "short_name": "jQuery Selector Generator",
  "description": "Alt+click any element to generate its optimum jquery selector path.",
  "version": "2.1",
  "author": "Amanda Olsen",

  "minimum_chrome_version": "10.0",

  "icons": {
  		"16": "icon16.png",
  		"48": "icon48.png",
        "128": "icon128.png" 
    },

   "web_accessible_resources": [
    "icon16.png",
    "lock.png"
  ],

  "content_scripts" : [{
      "matches": ["http://*/*", "https://*/*"],
      "js" : ["jquery-1.11.3.min.js", "main.js"]
  }]
}
